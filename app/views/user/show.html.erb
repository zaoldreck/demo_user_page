<div class="container">
  <div class="panel panel-primary">
  <!-- Default panel contents -->
  <div class="panel-heading">
    <%= @user.email %>
    <div class="pull-right" style="margin-top: -5px">
      <%= link_to "", user_path(@user), class: "glyphicon glyphicon-remove btn btn-sm btn-danger", method: :delete, data: { confirm: "Do you want delete #{@user.email}?"} %>
    </div>
  </div>
  <div class="panel-body">
    <%= form_for @user, url: user_path(@user), method: :patch, html: { class: 'form-horizontal' } do |f| %>
      <fieldset>
        <div class='form-group'>
          <%= f.label :email, class: 'col-sm-2 control-label' %>
          <div class='col-sm-10'>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :first_name, class: 'col-sm-2 control-label' %>
          <div class='col-sm-10'>
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :last_name, class: 'col-sm-2 control-label' %>
          <div class='col-sm-10'>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
        </div>

        <div class='form-group'>
          <%= f.label :phone, class: 'col-sm-2 control-label' %>
          <div class='col-sm-10'>
            <%= f.text_field :phone, class: 'form-control' %>
          </div>
        </div>

        <div class='form-group'>
          <div class='col-sm-10 col-sm-offset-2'>
            <%= f.submit "Save", class: 'btn btn-success form-control' %>
          </div>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
